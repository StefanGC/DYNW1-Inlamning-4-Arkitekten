
@{
    ViewData["Title"] = "Alla Projekter";
}

@model ProjectListViewModel

<div class="row">
    <div class="col-md-12">
        <h2>Dina projekter</h2>

        @foreach (var project in Model.Projects)
        {
            <h4>Projekt Namn: @project.Name</h4>

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Order Id</th>
                        <th class="text-right">Pris</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Orders.Count > 0)
                    {
                        @foreach (var line in Model.Orders)
                        {
                            <tr>
                                <td class="text-center">@line.OrderId</td>
                                <td class="text-left">@line.OrderTotal</td>
                            </tr>
                        }
                    }

                </tbody>
            </table>

        }

    </div>
</div>

