@{
    ViewData["Title"] = "Kundvagn";
}

@model ShoppingCartViewModel

<div class="row">
    <div class="col-md-12">
        <h2>Din kundvagn</h2>
        <h4>Här är alla dina produkter i din kundvagn.</h4>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Valt antal</th>
                    <th>Produkt</th>
                    <th class="text-right">Pris</th>
                    <th class="text-right">Delsumma</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
                {
                    <tr>
                        <td class="text-center">@line.Amount</td>
                        <td class="text-left">@line.Product.Name</td>
                        <td class="text-right">@line.Product.Price.ToString("c")</td>
                        <td class="text-right">
                            @((line.Amount * line.Product.Price).ToString("c"))
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total:</td>
                    <td class="text-right">
                        @Model.ShoppingCartTotal.ToString("c")
                    </td>
                </tr>
            </tfoot>
        </table>

        <div class="text-center">
            <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Kolla in nu!</a>
        </div>

    </div>
</div>


